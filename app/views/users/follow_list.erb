<div class="row">
    <aside class="col-md-4">
        <section class="user_info">
            <h1>
                <%= gravatar_for @user %>
                <%= @user.name %>
            </h1>
            <h4>
                <%= link_to "Edit your profile" , edit_user_path(@user) %>
            </h4>
            <h4>
                <%= link_to "Following" , followings_user_path(@user) %>
                <%= link_to "Followers" , followers_user_path(@user) %>
            </h4>
        </section>
    </aside>
    <div class="col-md-8">
        <h3>Follow(<%= @users.count %>)</h3>
        <% if @users.any? %>
            <ol class="follow_lists">
                <% @users.each do |user| %>
                    <li>
                        <%= link_to gravatar_for(user, size: 50), user %>
                        <span class="user"><%= user.name %></span>
                    </li>
                <% end %>
            </ol>
        <% end %>
    </div>
</div>